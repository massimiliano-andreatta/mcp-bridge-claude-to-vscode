{
  "name": "mcp-bridge-claude-to-vscode",
  "displayName": "MCP Bridge - Claude to VSCode",
  "description": "Expose VSCode features such as file viewing and editing as MCP, enabling the LLM to access these functionalities.",
  "publisher": "mandreatta",
  "version": "0.0.20",
  "license": "MIT",
  "type": "commonjs",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/massimiliano-andreatta/mcp-bridge-claude-to-vscode.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mcpBridgeC2V.stopServer",
        "title": "MCP Bridge: Stop Server"
      },
      {
        "command": "mcpBridgeC2V.startServer",
        "title": "MCP Bridge: Start Server"
      },
      {
        "command": "mcpBridgeC2V.toggleActiveStatus",
        "title": "MCP Bridge: Toggle Active Status"
      },
      {
        "command": "mcpBridgeC2V.openAutoApprovalSettings",
        "title": "MCP Bridge: Open Auto-Approval Settings"
      },
      {
        "command": "mcpBridgeC2V.toggleAutoApproval",
        "title": "MCP Bridge: Toggle Auto-Approval"
      },
      {
        "command": "mcpBridgeC2V.resetRateLimits",
        "title": "MCP Bridge: Reset Rate Limits"
      },
      {
        "command": "mcpBridgeC2V.showLifecycleStatus",
        "title": "MCP Bridge: Show Lifecycle Status"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "mcpBridgeC2V.startOnActivate": {
          "type": "boolean",
          "default": true,
          "description": "Determines if the MCP Bridge should start automatically on VSCode activation."
        },
        "mcpBridgeC2V.port": {
          "type": "number",
          "default": 60100,
          "description": "The port that the MCP Bridge listens on. Set in case of conflicts or custom configurations."
        },
        "mcpBridgeC2V.confirmationUI": {
          "type": "string",
          "enum": [
            "statusBar",
            "quickPick"
          ],
          "default": "quickPick",
          "description": "The UI to use for confirming changes: status bar buttons or quick pick dialog."
        },
        "mcpBridgeC2V.confirmNonDestructiveCommands": {
          "type": "boolean",
          "default": false,
          "description": "If true, even commands marked as non-destructive (modifySomething=false) will require user confirmation."
        },
        "mcpBridgeC2V.autoApproval": {
          "type": "object",
          "default": {
            "enabled": false,
            "permissions": {
              "read": {
                "enabled": false,
                "includeOutsideWorkspace": false
              },
              "write": {
                "enabled": false,
                "includeOutsideWorkspace": false,
                "includeProtectedFiles": false
              },
              "execute": {
                "enabled": false,
                "allowedCommands": []
              },
              "debug": {
                "enabled": false
              },
              "terminal": {
                "enabled": false
              },
              "browser": {
                "enabled": false
              }
            },
            "limits": {
              "maxRequests": 100,
              "timeWindowMinutes": 60,
              "retryDelaySeconds": 10,
              "requestTimeoutSeconds": 60
            }
          },
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "description": "Enable auto-approval system"
            },
            "permissions": {
              "type": "object",
              "properties": {
                "read": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "default": false,
                      "description": "Auto-approve read operations"
                    },
                    "includeOutsideWorkspace": {
                      "type": "boolean",
                      "default": false,
                      "description": "Allow reading files outside workspace"
                    }
                  }
                },
                "write": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "default": false,
                      "description": "Auto-approve write operations"
                    },
                    "includeOutsideWorkspace": {
                      "type": "boolean",
                      "default": false,
                      "description": "Allow writing files outside workspace"
                    },
                    "includeProtectedFiles": {
                      "type": "boolean",
                      "default": false,
                      "description": "Allow modifying protected files (like .git, config files)"
                    }
                  }
                },
                "execute": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "default": false,
                      "description": "Auto-approve command execution"
                    },
                    "allowedCommands": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "default": [],
                      "description": "List of allowed commands for auto-execution"
                    }
                  }
                },
                "debug": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "default": false,
                      "description": "Auto-approve debug operations"
                    }
                  }
                },
                "terminal": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "default": false,
                      "description": "Auto-approve terminal operations"
                    }
                  }
                },
                "browser": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "default": false,
                      "description": "Auto-approve browser preview operations"
                    }
                  }
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "maxRequests": {
                  "type": "number",
                  "default": 100,
                  "description": "Maximum requests per time window"
                },
                "timeWindowMinutes": {
                  "type": "number",
                  "default": 60,
                  "description": "Time window for request limits in minutes"
                },
                "retryDelaySeconds": {
                  "type": "number",
                  "default": 10,
                  "description": "Delay before retrying failed requests"
                },
                "requestTimeoutSeconds": {
                  "type": "number",
                  "default": 60,
                  "description": "Timeout for automatic request approval"
                }
              }
            }
          },
          "description": "Auto-approval settings for different types of operations"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcp-bridge-claude-to-vscode-container",
          "title": "MCP Bridge",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "mcp-bridge-claude-to-vscode-container": [
        {
          "type": "webview",
          "id": "mcpBridgeC2V.mainPanelView",
          "name": "MCP Control Panel"
        },
        {
          "type": "webview",
          "id": "mcp-bridge-claude-to-vscode-webview",
          "name": "MCP Bridge"
        }
      ],
      "explorer": [
        {
          "type": "webview",
          "id": "mcpBridgeC2V.autoApprovalView",
          "name": "MCP Auto-Approval",
          "when": "true"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "mcpBridgeC2V.autoApprovalView",
        "contents": "Configure auto-approval settings for MCP Bridge operations.\n[Open Settings](command:mcpBridgeC2V.openAutoApprovalSettings)"
      }
    ]
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm package",
    "package-extension": "cross-env npm_config_user_agent=pnpm vsce package --no-dependencies",
    "compile": "pnpm check-types && node build.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node build.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "compile-tests": "node build.js --test",
    "pretest": "pnpm compile-tests",
    "test": "vscode-test",
    "package": "pnpm check-types && node build.js --production"
  },
  "devDependencies": {
    "@types/diff": "^7.0.1",
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.13.10",
    "@types/pdf-parse": "^1.1.4",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.98.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.2",
    "cross-env": "^7.0.3",
    "sinon": "^20.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "dedent": "^1.5.3",
    "diff": "^7.0.0",
    "esbuild": "^0.25.1",
    "express": "^4.21.2",
    "ignore": "^7.0.3",
    "isbinaryfile": "^5.0.4",
    "mammoth": "^1.9.0",
    "p-wait-for": "^5.0.2",
    "pdf-parse": "^1.1.1",
    "strip-bom": "^5.0.0"
  },
  "packageManager": "pnpm@10.6.1+sha512.40ee09af407fa9fbb5fbfb8e1cb40fbb74c0af0c3e10e9224d7b53c7658528615b2c92450e74cfad91e3a2dcafe3ce4050d80bda71d757756d2ce2b66213e9a3"
}
